{
  "name": "simpleBattleship",
  "version": "0.0.1",
  "description": "A simple single player battleship",
  "main": "TextModeGame.js",
  "config" : {
    "blanket" : {
        "pattern" : "",
        "data-cover-never" : [
            "node_modules",
            "test"
        ]
    }
  },
  "scripts": {
    "test": "mocha --recursive -R spec ./unitTests/",
    "test-coverage": "mocha --require blanket --recursive ./unitTests/ -R html-cov > coverage.html",
    "test-board": "mocha -R spec ./unitTests/board-test.js",
    "build-js": "browserify WebModeGame.js --standalone WebGame -o bundle.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gustavo7lagoas/simpleBattleship.git"
  },
  "keywords": [
    "unit",
    "test",
    "acceptance",
    "test"
  ],
  "author": "gustavo7lagoas",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gustavo7lagoas/simpleBattleship/issues"
  },
  "homepage": "https://github.com/gustavo7lagoas/simpleBattleship",
  "dependencies": {
    "browserify": "^10.2.1",
    "lodash": "^3.6.0"
  },
  "devDependencies": {
    "blanket": "^1.1.7",
    "chai": "^2.3.0",
    "mocha": "^2.2.4",
    "sinon": "^1.14.1"
  }
}
